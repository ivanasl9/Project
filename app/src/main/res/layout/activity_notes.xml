<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".Notes"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"
            android:onClick="arrowBackOption"
            android:padding="15dp"
            android:layout_centerVertical="true">
        </ImageView>

        <ImageView
            android:id="@+id/deleteNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteN"
            app:srcCompat="@drawable/ic_delete"
            android:padding="15dp"
            android:layout_toRightOf="@id/voice_mess"
            android:layout_centerVertical="true">
        </ImageView>

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_save"
            android:layout_toLeftOf="@id/add">

        </ImageView>


        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_add">

        </ImageView>

        <ImageView
            android:id="@+id/voice_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/add"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_voice_message">

        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:onClick="dismiss"
            android:padding="15dp"
            android:layout_alignParentRight="true">

        </ImageView>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_notes"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:clickable="true"
            android:hint="@string/title"
            android:text="" />

    </LinearLayout>

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_text"
        android:inputType="date" />




</LinearLayout>